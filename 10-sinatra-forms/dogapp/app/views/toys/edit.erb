<h1>edit the toy</h1>

<form action="/toys/<%= @toy.id %>" method="POST">
  <input type="hidden" name="_method" value="patch" />

  <label for="name"> Name: </label>
  <input id="name" type="text" name="toy[name]" value="<%= @toy.name %>">

  <label for="dog_id"> Dog: </label>
  <select name="toy[dog_id]">
    <% @dogs.each do |dog| %>
      <option
        value="<%= dog.id %>"
        <% if @toy.dog_id == dog.id %>
          selected
        <% end %>
      >
        <%= dog.name %>
      </option>
    <% end %>
  </select>

  <input type="submit" value="edit toy">
</form>
